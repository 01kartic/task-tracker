{
  "name": "task-tracker",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron:build": "npm run export && electron-builder",
    "electron:build:win": "npm run export && electron-builder --win",
    "electron:build:mac": "npm run export && electron-builder --mac",
    "electron:build:linux": "npm run export && electron-builder --linux"
  },
  "build": {
    "appId": "com.kartic.tasktracker",
    "productName": "Task Tracker",
    "copyright": "Copyright Â© 2026 Task Tracker",
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "package.json",
      "public/icons/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tabler/icons-react": "^3.36.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.5",
    "next-themes": "^0.4.6",
    "node-notifier": "^10.0.1",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
